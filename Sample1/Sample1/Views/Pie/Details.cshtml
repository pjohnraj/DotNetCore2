@model Sample.DataModel.Pie
<h2>@Model.Name</h2>
<div class="img-thumbnail">
    <img src="@Model.ImageThumbnailUrl" alt="" />
    <div class="figure-caption">
        <h3 class="float-right">@Model.Price.ToString("c")</h3>
        <h3>@Model.Name</h3>
        <p>@Model.LongDescription</p>
    </div>
</div>
